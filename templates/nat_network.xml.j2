<network>
    <name>{{ libvirt_network_name }}</name>
    <forward mode='{{ libvirt_network_mode }}'/>
    <domain name="{{ libivrt_network_domain }}"/>
    <dns>
        <host ip='{{ subnet.split('.')[:3] | join('.')}}.2'>
            <hostname>bootstrap-0.{{ libivrt_network_domain }}</hostname>
        </host>
        <host ip='{{ subnet.split('.')[:3] | join('.')}}.1'>
            <hostname>api-int.{{ libivrt_network_domain }}</hostname>
            <hostname>api.{{ libivrt_network_domain }}</hostname>
        </host>
        {% for id in range(0, master_count | int) -%}
        <srv service='etcd-server-ssl' protocol='tcp' domain='{{ libivrt_network_domain }}' target='etcd-{{ id }}.{{ libivrt_network_domain }}' port='2380' priority='0' weight='10'/>
        <host ip='{{ subnet.split('.')[:3] | join('.')}}.{{ master_ip_octet|int + id|int }}'>
            <hostname>master-{{ id }}.{{ libivrt_network_domain }}</hostname>
            <hostname>etcd-{{ id }}.{{ libivrt_network_domain }}</hostname>
        </host>
        {% endfor %}
        {% for id in range(0, compute_count | int) -%}
        <host ip='{{ subnet.split('.')[:3] | join('.')}}.{{ compute_ip_octet|int + id|int }}'>
            <hostname>compute-{{ id }}.{{ libivrt_network_domain }}</hostname>
        </host>
        {% endfor %}
    </dns>

    <ip address='{{ subnet.split('.')[:3] | join('.')}}.1' netmask='{{ mask }}'>
        <dhcp>
            <range start='{{ subnet.split('.')[:3] | join('.')}}.10' end='{{ subnet.split('.')[:3] | join('.')}}.250'/>
            <host mac='{{ mac_start }}{{ '%02x' % subnet.split('.')[1]|int }}:{{ '%02x' % subnet.split('.')[2]|int }}:{{ '%02x' % 2 }}' name='bootstrap-0.{{ libivrt_network_domain }}' ip='{{ subnet.split('.')[:3] | join('.')}}.2'/>

            {% for id in range(0, master_count | int) -%}
            <host mac='{{ mac_start }}{{ '%02x' % subnet.split('.')[1]|int }}:{{ '%02x' % subnet.split('.')[2]|int }}:{{ '%02x' % (10 + id) }}' name='master-{{ id }}.{{ libivrt_network_domain }}' ip='{{ subnet.split('.')[:3] | join('.')}}.{{ master_ip_octet|int + id|int }}'/>
            {% endfor -%}

            {% for id in range(0, compute_count | int) -%}
            <host mac='{{ mac_start }}{{ '%02x' % subnet.split('.')[1]|int }}:{{ '%02x' % subnet.split('.')[2]|int }}:{{ '%02x' % (10 + master_count|int + id) }}' name='compute-{{ id }}.{{ libivrt_network_domain }}' ip='{{ subnet.split('.')[:3] | join('.')}}.{{ compute_ip_octet|int + id }}'/>
            {% endfor %}
        </dhcp>
    </ip>
</network>

{{ compute_ip_octet|int }}
